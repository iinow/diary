{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2017",
      "WebWorker"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "src/node_modules/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "static/*"
  ],
  "compileOnSave": true
}
